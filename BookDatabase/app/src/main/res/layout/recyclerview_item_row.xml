<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="marcer.pau.bookdatabase.newBook.NewBook"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    app:columnCount="2"
    app:orientation="horizontal"
    app:rowCount="2"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/recycleritemimg"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@mipmap/ic_no_image_available"
        app:layout_row="0"
        app:layout_column="0"
        app:layout_rowSpan="2"
        android:layout_width="110dp"
        android:layout_height="130dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/recycleritemTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_row="0"
        app:layout_column="1"
        tools:text="title"
        android:layout_width="267dp"
        android:layout_height="35dp"
        android:textStyle="normal|bold"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/recycleritemimg"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycleritemAuthor"
        app:layout_row="1"
        app:layout_column="1"
        tools:text="author"
        android:layout_height="35dp"
        android:layout_width="267dp"
        app:layout_constraintTop_toBottomOf="@+id/recycleritemTitle"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/recycleritemimg" />

    <Space
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recycleritemimg"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
