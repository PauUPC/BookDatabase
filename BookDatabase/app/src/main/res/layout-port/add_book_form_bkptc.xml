<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="marcer.pau.bookdatabase.newBook.NewBook">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/menuadd_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <!--<TextView-->
        <!--android:text="@string/personal_evaluation"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textView9"-->
        <!--android:textAppearance="@android:style/TextAppearance.Material.Medium"-->
        <!--android:layout_weight="1"-->
        <!--app:layout_row="6"-->
        <!--app:layout_column="0" />-->

        <!--<EditText-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ems="10"-->
        <!--android:id="@+id/addbookform_eval"-->
        <!--android:inputType="text"-->
        <!--android:maxLines="1"-->
        <!--android:layout_weight="1"-->
        <!--app:layout_row="6"-->
        <!--app:layout_column="1"-->
        <!--android:hint="@string/personal_evaluation_hint" />-->

        <ImageView
            android:id="@+id/addbookform_img"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@mipmap/ic_no_image_available"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_rowSpan="2"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginTop="8dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addbookform_eval"
            app:layout_row="8"
            app:layout_column="0"
            app:layout_columnSpan="3"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:theme="@style/RatingBar"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addbookform_cat"
            android:inputType="text"
            android:maxLines="1"
            app:layout_row="5"
            app:layout_column="1"
            android:hint="@string/category_hint"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addbookform_publisher"
            app:layout_constraintLeft_toLeftOf="@+id/addbookform_publisher"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:layout_width="234dp"
            android:layout_height="43dp"
            android:ems="10"
            android:id="@+id/addbookform_publisher"
            android:inputType="text"
            android:maxLines="1"
            app:layout_row="4"
            app:layout_column="1"
            android:hint="@string/publisher_hint"
            app:layout_constraintTop_toBottomOf="@+id/addbookform_pubdate"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/addbookform_pubdate"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addbookform_pubdate"
            android:inputType="text"
            android:maxLines="1"
            app:layout_row="3"
            app:layout_column="1"
            android:hint="@string/published_date_hint"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/addbookform_img"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addbookform_author"
            android:inputType="text"
            android:maxLines="1"
            app:layout_row="2"
            app:layout_column="1"
            android:hint="@string/author_hint"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/addbookform_img"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:text="@string/personal_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_row="7"
            app:layout_column="0"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/addbookform_cat"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/addbookform_title"
            android:maxLines="1"
            app:layout_row="1"
            app:layout_column="1"
            android:hint="@string/title_hint"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/addbookform_img"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:text="@string/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_row="5"
            app:layout_column="0"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:text="@string/publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_row="4"
            app:layout_column="0"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:text="@string/published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_row="3"
            app:layout_column="0"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/addbookform_img" />

        <TextView
            android:text="@string/Author"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_constraintTop_toBottomOf="@+id/addbookform_title"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/addbookform_img"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:text="@string/Title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_row="0"
            app:layout_column="1"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/addbookform_img"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="293dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="293dp"
            tools:layout_editor_absoluteX="0dp" />


    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>