<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="marcer.pau.bookdatabase.newBook.NewBook">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/viewbook_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="60dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:id="@+id/floatingActionButton2"
        app:layout_anchorGravity="bottom|left"
        android:layout_gravity="bottom|right"
        android:layout_height="60dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/viewbook_img"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/ic_no_image_available"
                    android:layout_width="150dp"
                    android:layout_height="220dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="@string/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewbook_title"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0.47" />

                    <TextView
                        android:text="@string/Author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewbook_author"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        app:layout_row="2"
                        android:layout_weight="0.77" />

                    <TextView
                        android:text="@string/published_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewbook_pbdate"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:layout_weight="1" />

                    <TextView
                        android:text="@string/publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewbook_publisher"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:layout_weight="1" />

                    <TextView
                        android:text="@string/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewbook_category"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:text="@string/personal_evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewbook_eval"
                android:rating="0"
                android:stepSize="1"
                android:numStars="5"
                android:layout_marginStart="8dp"
                android:progressTint="@color/duskYellow"
                android:progressBackgroundTint="@color/lightGrey" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/viewbook_marked"
                android:text="@string/book_has_been_marqued_for_removal"
                android:textColor="@color/red"
                android:textStyle="normal|italic"
                android:layout_gravity="top|end"
                android:textAlignment="viewEnd" />

            <Button
                android:text="@string/remove_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewbook_remove"
                android:layout_gravity="top|end"
                android:backgroundTint="@color/red" />

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>