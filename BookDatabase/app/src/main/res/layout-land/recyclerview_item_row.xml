<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="marcer.pau.bookdatabase.newBook.NewBook"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/recycleritemPlus"
            android:layout_gravity="center"
            android:visibility="visible"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:id="@+id/viewbook_label">

            </LinearLayout>

            <ImageView
                android:id="@+id/recycleritemimg"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/ic_no_image_available"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_weight="16.09" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/recycleritemTitle"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    tools:text="title"
                    android:layout_width="0dp"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/recycleritemAuthor"
                    tools:text="author"
                    android:layout_width="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/recycleritemYear"
                    tools:text="year"
                    android:layout_width="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_weight="1"
        android:layout_margin="8dp" />

</LinearLayout>
