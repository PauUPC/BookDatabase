<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="marcer.pau.bookdatabase.newBook.NewBook">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/menuadd_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            app:columnCount="3"
            app:orientation="horizontal"
            app:rowCount="7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/addbookform_img"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:background="@mipmap/ic_no_image_available"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_rowSpan="2"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:text="@string/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_weight="1"
                app:layout_row="0"
                app:layout_column="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/addbookform_title"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_row="1"
                app:layout_column="1"
                android:hint="@string/title_hint" />

            <TextView
                android:text="@string/Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                app:layout_row="2"
                app:layout_column="0"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/addbookform_author"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_row="2"
                app:layout_column="1"
                android:hint="@string/author_hint" />

            <TextView
                android:text="@string/published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_weight="1"
                app:layout_row="3"
                app:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/addbookform_pubdate"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_row="3"
                app:layout_column="1"
                android:hint="@string/published_date_hint" />

            <TextView
                android:text="@string/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_weight="1"
                app:layout_row="4"
                app:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/addbookform_publisher"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_row="4"
                app:layout_column="1"
                android:hint="@string/publisher_hint" />

            <TextView
                android:text="@string/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_weight="1"
                app:layout_row="5"
                app:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/addbookform_cat"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_row="5"
                app:layout_column="1"
                android:hint="@string/category_hint" />

            <TextView
                android:text="@string/personal_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_weight="1"
                app:layout_row="6"
                app:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/addbookform_eval"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_row="6"
                app:layout_column="1"
                android:hint="@string/personal_evaluation_hint" />


        </android.support.v7.widget.GridLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>