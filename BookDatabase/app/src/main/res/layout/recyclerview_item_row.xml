<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="marcer.pau.bookdatabase.newBook.NewBook"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycleritemlayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/viewbook_label"
            android:layout_weight="0.1"
            android:background="@android:color/darker_gray">

        </LinearLayout>

        <ImageView
            android:id="@+id/recycleritemimg"
            android:layout_width="121dp"
            android:layout_height="165dp"
            android:cropToPadding="false"
            android:background="@drawable/gradient_item_row" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_item_row"
            android:weightSum="1">

            <TextView
                android:id="@+id/recycleritemTitle"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                tools:text="title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/recycleritemAuthor"
                tools:text="author"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/recycleritemYear"
                tools:text="year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_item_row">

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:layout_margin="4dp" />

</LinearLayout>
